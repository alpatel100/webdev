<% include partials/header %>

<div class="container">
    <h2>New Blog</h2>
    <form action="/blogs" method="POST">
      <div class="form-group">
        <label for="blog[title]">Title</label>
        <input type="text" class="form-control" name="blog[title]" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="blog[image]">Image</label>
        <input type="text" class="form-control" name="blog[image]" placeholder="Image URL">
      </div>
      <div class="form-group">
          <textarea class="form-control" rows="5" name="blog[body]" placeholder="Your blog content"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Create Post</button>
    </form>
</div>

<% include partials/footer %>