<% include partials/header %>
<div class=container>
  <header class="jumbotron">
    <h1>Welcome to YelpCamp !! </h1>
    <p>View our hand-picked campgrounds from ll over the world.</p>
    <a href="/campgrounds/new" class="btn btn-primary" role="button">Add new Campground</a>
  </header>

</div>
<div class=container>
  <div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <% campgrounds.forEach(function(camp){ %>
      <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <img src="<%= camp.image %>">
            <div class="caption"
              <h4><%= camp.name %></h4>
            </div>
            <p>
              <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary" role="button">More info</a>
            </p>
          </div>
      </div>

    <% }); %>
    </div>
</div>
<% include partials/footer %>